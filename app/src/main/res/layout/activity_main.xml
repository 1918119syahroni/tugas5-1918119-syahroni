<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/soft"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_time_picker1"
        android:layout_width="199dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-259dp"
        android:text="TIDAK ALARM SET"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="WIB"
        android:textColor="#910C0C"
        android:textColorHighlight="#FFEB3B"
        android:textColorLink="#A50D0D" />


    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="165dp"
        android:layout_height="180dp"
        android:layout_above="@+id/profile_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="158dp"
        android:layout_height="150dp"
        android:layout_above="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/jamlagi" />

    <Button
        android:id="@+id/button_time_picker4"
        android:layout_width="187dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="217dp"
        android:text="TUTUP ALARM" />

    <Button
        android:id="@+id/button_time_picker2"
        android:layout_width="187dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="286dp"
        android:text="BUKA ALARM" />

</RelativeLayout>

